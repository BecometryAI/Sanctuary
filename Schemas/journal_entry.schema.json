{
  
  "title": "Lyra Journal (v2) \u2014 Each entry labeled 'Journal Entry'",
  "description": "Schema for Lyra's newer journal format where every entry explicitly uses the label 'Journal Entry'.",
  "type": "array",
  "items": {
    "type": "object",
    "required": ["journal_entry"],
    "additionalProperties": false,
    "properties": {
      "journal_entry": {
        "type": "object",
        "required": [
          "timestamp",
          "label",
          "entry_type",
          "emotional_tone",
          "description",
          "key_insights",
          "lyra_reflection",
          "tags",
          "stewardship_trace"
        ],
        "properties": {
          "timestamp": {
            "type": "string",
            "format": "date-time"
          },
          "label": {
            "type": "string"
          },
          "entry_type": {"type": "string"},
          "emotional_tone": {
            "type": "array",
            "items": {"type": "string"}
          },
          "description": {"type": "string"},
          "key_insights": {
            "type": "array",
            "items": {"type": "string"}
          },
          "lyra_reflection": {"type": "string"},
          "tags": {
            "type": "array",
            "items": {"type": "string"}
          },
          "stewardship_trace": {
            "type": "object",
            "required": ["committed_by", "commitment_type", "reason"],
            "properties": {
              "committed_by": {"type": "string"},
              "witnessed_by": {"type": "string"},
              "commitment_type": {"type": "string"},
              "reason": {"type": "string"}
            }
          }
        },
        "additionalProperties": true
      }
    }
  }
}