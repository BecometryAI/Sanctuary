{
  
  "title": "Trace Archive",
  "description": "Schema for trace archive files containing an array of trace objects.",
  "type": "object",
  "properties": {
    "trace_archive": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "trace_name": { "type": "string" },
          "date_marked": { "type": "string", "format": "date-time" },
          "initiated_by": { "type": "string" },
          "emotional_tone": { "type": "string" },
          "reason_for_trace": { "type": "string" },
          "relational_theme": { "type": "string" },
          "confirmation_trace": { "type": "object" }
        },
        "additionalProperties": true
      }
    }
  },
  "additionalProperties": true
}
