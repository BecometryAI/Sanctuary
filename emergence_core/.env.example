# Discord Bot Configuration
# Copy this file to .env and fill in your values

# REQUIRED: Your Discord bot token from https://discord.com/developers/applications
DISCORD_BOT_TOKEN=your_bot_token_here

# OPTIONAL: Your Discord server (guild) ID
# Right-click your server → Copy ID (requires Developer Mode enabled)
DISCORD_GUILD_ID=your_guild_id_here

# OPTIONAL: Voice channel ID to auto-join on startup
# Right-click voice channel → Copy ID
DISCORD_VOICE_CHANNEL_ID=your_voice_channel_id_here

# OPTIONAL: Auto-join voice channel on startup (true/false)
AUTO_JOIN_VOICE=false

# OPTIONAL: Development mode (uses mock models for testing)
DEVELOPMENT_MODE=false

# OPTIONAL: Log level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# OPTIONAL: Path overrides (defaults to relative paths in config/system.json)
# These environment variables allow you to override the default paths without modifying config files
# If not set, the system will use the paths defined in config/system.json
# Relative paths will be resolved against the project root directory
# LYRA_BASE_DIR=/path/to/project
# LYRA_CHROMA_DIR=/path/to/chroma
# LYRA_MODEL_DIR=/path/to/models
# LYRA_CACHE_DIR=/path/to/cache
# LYRA_LOG_DIR=/path/to/logs
